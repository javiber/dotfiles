bindsym --release Shift+Print exec "scrot -s ~/Pictures/%s_%H%M_%d.%m.%Y_$wx$h.png && notify-send 'Screenshoot taken"
bindsym --release $mod+Shift+Print exec "scrot -u -d 4 ~/Pictures/%s_%H%M_%d.%m.%Y_$wx$h.png && notify-send 'Screenshoot taken"

